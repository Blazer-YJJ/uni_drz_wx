
.uni-load-more {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}
.uni-load-more__text {
  font-size: 28rpx;
  color: #999;
}
.uni-load-more__img {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}
.loading-icon {
  width: 100%;
  height: 100%;
  border: 2px solid #e5e5e5;
  border-top-color: #007aff;
  border-radius: 50%;
  animation: loading 1s linear infinite;
}
@keyframes loading {
0% {
    transform: rotate(0);
}
100% {
    transform: rotate(360deg);
}
}
